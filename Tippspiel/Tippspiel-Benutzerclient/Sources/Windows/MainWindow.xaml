<Window x:Class="Tippspiel_Benutzerclient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tippspiel_Benutzerclient"
        mc:Ignorable="d"
        Title="TippTiger" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <Image Name="Logo" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2" Width="1000" Height="250" Margin="0,120,0,0" VerticalAlignment="Top" Source="../../Ressources/Logo.png"/>
        <Grid Name="LoginGrid"  Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Content="Benutzername" FontSize="25" FontFamily="Verdana" Margin="10"/>
            <TextBox Grid.Column="1" Grid.Row="0" Width="200" Margin="10" FontSize="25" FontFamily="Verdana" VerticalContentAlignment="Center"/>
            <Button Name="ButtonLogin" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Width="200" Height="50"  Margin="10" Content="Anmelden" FontFamily="Verdana" FontSize="25" Click="ButtonLogin_Click"/>

        </Grid>

        <!--Main area-->

        <!--Tabelle-->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="185"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Name="LabelTable" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Tabelle" FontSize="50" FontFamily="Verdana" Opacity="0"/>
        </Grid>
        
        <!--Wetten-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="185"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Name="LabelBets" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Wetten" FontSize="50" FontFamily="Verdana" Opacity="0"/>
        </Grid>

        <!--Tipper-->
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="185"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Name="LabelBettors" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Tipper" FontSize="50" FontFamily="Verdana" Opacity="0"/>
        </Grid>
        
        <!--Bottom-->
        <Label Grid.Column="2" Grid.Row="1" Content="*haftungsbeschränkt" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10"/>
    </Grid>
</Window>
